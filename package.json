{
  "name": "area-code",
  "version": "0.3.0",
  "private": true,
  "workspaces": [
    "ufa/apps/*",
    "ufa/packages/*",
    "ufa/services/*",
    "odw/apps/*",
    "odw/packages/*",
    "odw/services/*"
  ],
  "scripts": {
    "dev": "pnpm -C apps/components-docs dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "docs:dev": "pnpm -C apps/components-docs dev",
    "docs:build": "pnpm -C apps/components-docs build",
    "docs:start": "pnpm -C apps/components-docs start",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "clean": "turbo run clean || true; find . -name 'node_modules' -type d -prune -exec rm -rf {} +"
  },
  "devDependencies": {
    "@turbo/gen": "^1.13.4",
    "eslint": "^8.57.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">=20"
  }
}
