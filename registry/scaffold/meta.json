{
  "$schema": "https://schemas.connector-factory.dev/scaffold.schema.json",
  "scaffold": "meta",
  "version": "0.1.0",
  "description": "Generic connector scaffold that is language-agnostic and provides shared metadata, docs, assets and spec locations. The root folder is the connector name, with an organization/author subfolder.",
  "variables": {
    "connector": {
      "description": "Connector name (kebab-case).",
      "example": "stripe",
      "pattern": "^[a-z0-9][a-z0-9-]*$"
    },
    "author": {
      "description": "Organization or author handle (kebab-case).",
      "example": "fiveonefour",
      "pattern": "^[a-z0-9][a-z0-9-]*$"
    }
  },
  "structure": [
    {
      "type": "dir",
      "name": "{connector}",
      "children": [
        {
          "type": "dir",
          "name": "{author}",
          "children": [
            {
              "type": "dir",
              "name": "meta",
              "children": [
                {
                  "type": "file",
                  "name": "README.md",
                  "template": "# {connector}\\n\\n> Maintained by {author}\\n\\n"
                },
                {
                  "type": "file",
                  "name": "CHANGELOG.md",
                  "template": "# Changelog\\n\\nAll notable changes to `{connector}` by `{author}`.\\n\\n"
                },
                {
                  "type": "file",
                  "name": "LICENSE",
                  "template": "MIT\n"
                },
                {
                  "type": "file",
                  "name": "connector.json",
                  "template": "{\n  \"$schema\": \"https://schemas.connector-factory.dev/connector-metadata.schema.json\",\n  \"name\": \"{connector}\",\n  \"title\": \"{connector}\",\n  \"author\": \"{author}\",\n  \"version\": \"0.1.0\",\n  \"languages\": [],\n  \"tags\": [],\n  \"category\": \"api|db|stream\",\n  \"description\": \"\",\n  \"homepage\": \"\",\n  \"license\": \"MIT\",\n  \"source\": {\"type\":\"api\",\"spec\":\"./../common/spec/openapi.yaml\"},\n  \"capabilities\": {\"extract\": true, \"transform\": true, \"load\": true},\n  \"maintainers\": []\n}\n"
                },
                {
                  "type": "dir",
                  "name": "assets",
                  "children": [
                    { "type": "file", "name": "logo.svg" },
                    { "type": "file", "name": "icon.svg" }
                  ]
                },
                {
                  "type": "dir",
                  "name": "docs",
                  "children": [
                    { "type": "file", "name": "getting-started.md" },
                    { "type": "file", "name": "configuration.md" },
                    { "type": "file", "name": "schema.md" },
                    { "type": "file", "name": "limits.md" }
                  ]
                }
              ]
            },
            {
              "type": "dir",
              "name": "common",
              "children": [
                {
                  "type": "dir",
                  "name": "spec",
                  "children": [
                    { "type": "file", "name": "openapi.yaml" },
                    { "type": "file", "name": "models.json" }
                  ]
                },
                {
                  "type": "dir",
                  "name": "examples",
                  "children": [
                    { "type": "file", "name": "config.sample.json" },
                    { "type": "file", "name": "data.sample.json" }
                  ]
                },
                {
                  "type": "dir",
                  "name": "tests",
                  "children": [
                    { "type": "file", "name": "contract.schema.test.json" }
                  ]
                }
              ]
            },
            { "type": "dir", "name": "python" },
            { "type": "dir", "name": "typescript" }
          ]
        }
      ]
    }
  ]
}