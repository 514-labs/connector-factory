{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*.ts", "*.ts", "!**/*.test.ts", "!tests/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "tests/**/*", "examples/**/*"]
}